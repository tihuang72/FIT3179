{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Solar capacity and solar farm station locations",
    "fontSize": 20,
    "font": "Roboto"
  },
  "width": 500,
  "height":500,
  "params": [
    {
      "name": "zoom_level",
      "value": 670,
      "bind": {
        "input": "range",
        "min": 670,
        "max": 5000,
        "step": 10,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [
        132,
        -23
      ],
      "bind": {
        "input": "select",
        "options": [
          [
            132,
            -23
          ],
          [
            145,
            -35.5
          ],
          [
            151.2,
            -30.8
          ],
          [
            147.3,
            -22.9
          ],
          [
            138.4,
            -34.6
          ],
          [
            115.5,
            -31.6
          ],
          [
            146.8,
            -42
          ]
        ],
        "labels": [
          "Central Australia",
          "Victoria",
          "New South Wales",
          "Queensland",
          "South Australia",
          "Western Australia",
          "Tasmania"
        ],
        "name": "Map Centre: "
      }
    },
    {
      "name": "energy",
      "value": [
        "Residential Capacity (MW)"
      ],
      "bind": {
        "input": "select",
        "options": [
          "Residential Capacity (MW)",
          "Rural / Primacy Production Capacity (MW)",
          "Industrial Capacity (MW)",
          "Commercial Capacity (MW)",
          "Mixed Capacity (MW)"
        ],
        "labels": [
          "Residential",
          "Rural",
          "Industrial",
          "Commercial",
          "Mixed"
        ],
        "name": "Solar Energy Type: "
      }
    }
  ],
  "projection": {
    "type": "equirectangular",
    "scale": {
      "expr": "zoom_level"
    },
    "center": {
      "expr": "center_to"
    }
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tihuang72/FIT3179/refs/heads/main/Visualisation%202/js/output.json",
        "format": {
          "type": "topojson",
          "feature": "LGA_2021_AUST_GDA2020"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.LGA_NAME21",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tihuang72/FIT3179/refs/heads/main/Visualisation%202/data/SolarLGA2016.csv"
      },
      "transform": [
        {
          "lookup": "LGA_CODE_2016",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/tihuang72/FIT3179/refs/heads/main/Visualisation%202/js/output.json",
              "format": {
                "type": "topojson",
                "feature": "LGA_2021_AUST_GDA2020"
              }
            },
            "key": "properties.LGA_CODE21"
          },
          "as": "geo"
        },
        {
          "filter": "datum.EnergyType == energy"
        }
      ],
      "mark": {
        "type": "geoshape",
        "font": "Sixtyfour Convergence"
      },
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "field": "Capacity",
          "type": "quantitative",
          "legend": {
            "labelFont": "Roboto",
            "labelFontSize": 14,
            "titleFont": "Roboto",
            "titleFontSize": 16
          },
          "scale": {
            "scheme": "oranges"
          }
        },
        "tooltip": [
          {
            "field": "LGA_NAME_2016",
            "type": "nominal",
            "title": "Local Government Area"
          },
          {
            "field": "Capacity",
            "type": "quantitative"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tihuang72/FIT3179/refs/heads/main/Visualisation%202/data/solar.csv"
      },
      "mark": {
        "type": "circle",
        "size": "40"
      },
      "transform": [
        {
          "filter": {
            "field": "Lat",
            "valid": true
          }
        }
      ],
      "encoding": {
        "latitude": {
          "field": "Lat",
          "type": "quantitative"
        },
        "longitude": {
          "field": "Lon",
          "type": "quantitative"
        },
        "color": {
          "field": "",
          "type": "nominal",
          "value": "#00008B"
        },
        "tooltip": [
          {
            "field": "Station Name",
            "type": "nominal",
            "title": "Station Name"
          },
          {
            "field": "Max Cap (MW)",
            "type": "quantitative",
            "title": "Max Cap (MW)"
          }
        ]
      }
    }
  ]
}