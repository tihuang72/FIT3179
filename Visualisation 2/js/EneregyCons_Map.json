{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Solar capacity and solar farm station locations",
  "width": 600,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/tihuang72/FIT3179/refs/heads/main/Visualisation%202/js/output.json",
    "format": {
      "type": "topojson",
      "feature": "LGA_2021_AUST_GDA2020"
    }
  },
  "params": [
    {
      "name": "zoom_level",
      "value": 670,
      "bind": {
        "input": "range",
        "min": 670,
        "max": 5000,
        "step": 10,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [
        132,
        -23
      ],
      "bind": {
        "input": "select",
        "options": [
          [147,-32.1],
          [145,-35.5],
          [151.2,-30.8],
          [147.3,-22.9],
          [138.4,-34.6],
          [115.5,-31.6],
          [146.8,-42]
        ],
        "labels": [
          "Central Australia",
          "Victoria",
          "New South Wales",
          "Queensland",
          "South Australia",
          "Western Australia",
          "Tasmania"
        ],
        "name": "Map Centre: "
      }
    },
    {
      "name": "energy",
      "value": ["Residential Capacity (MW)"],
      "bind":{
        "input": "select",
        "options": [
          "Residential Capacity (MW)",
          "Rural / Primacy Production Capacity (MW)",
          "Industrial Capacity (MW)",
          "Commercial Capacity (MW)",
          "Mixed Capacity (MW)"
        ],
        "labels": [
          "Residential",
          "Rural",
          "Industrial",
          "Commercial",
          "Mixed"
        ],
        "name": "Solar Energy Type: "
      }
    }
  ],
  "projection": {
    "type": "equirectangular",
    "scale": {
      "expr": "zoom_level"
    },
    "center": {"expr": "center_to"}
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tihuang72/FIT3179/refs/heads/main/Visualisation%202/js/output.json",
        "format": {
          "type": "topojson",
          "feature": "LGA_2021_AUST_GDA2020"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.LGA_NAME21",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.LGA_CODE21",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/tihuang72/FIT3179/refs/heads/main/Visualisation%202/data/LGA2016zones.csv"
            },
            "key": "LGA_CODE_2016",
            "fields": [
              "Residential Capacity (MW)"
            ]
          }
        },
        {
          "calculate": "'Data is not available in ' + datum.properties.LGA_NAME21",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "color": {
          "field": "Residential Capacity (MW)",
          "type": "quantitative"
        },
        "tooltip": [
          {
            "field": "properties.LGA_NAME21",
            "type": "nominal",
            "title": "Local Government Area"
          },
          {
            "field": "Residential Capacity (MW)",
            "type": "quantitative"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tihuang72/FIT3179/refs/heads/main/Visualisation%202/data/solar.csv"
      },
      "mark": {
        "type": "circle",
        "size": "40"
      },
      "transform": [
        {
          "filter": {
            "field": "Lat",
            "valid": true
          }
        }
      ],
      "encoding": {
        "latitude": {
          "field": "Lat",
          "type": "quantitative"
        },
        "longitude": {
          "field": "Lon",
          "type": "quantitative"
        },
        "color": {
          "field": "",
          "type": "nominal",
          "value": "#000000"
        },
        "tooltip": [
          {
            "field": "Station Name",
            "type": "nominal",
            "title": "Station Name"
          },
          {
            "field": "Max Cap (MW)",
            "type": "quantitative",
            "title": "Max Cap (MW)"
          }
        ]
      }
    }
  ]
}