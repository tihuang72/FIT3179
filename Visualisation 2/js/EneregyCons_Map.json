{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Solar capacity",
  "width": 800,
  "height": 800,
  "projection": {
    "type": "equirectangular"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/tihuang72/FIT3179/refs/heads/main/Visualisation%202/js/output.json",
    "format": {
      "type": "topojson",
      "feature": "LGA_2021_AUST_GDA2020"
    }
  },
  "layer": [
    {
      "transform": [
        {
          "lookup": "properties.LGA_CODE21",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/tihuang72/FIT3179/refs/heads/main/Visualisation%202/data/LGA2016zones.csv"
            },
            "key": "LGA_CODE_2016",
            "fields": [
              "Residential Capacity (MW)"
            ]
          }
        }
      ],
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "color": {
          "field": "Residential Capacity (MW)",
          "type": "quantitative"
        },
        "tooltip": [
          {
            "field": "properties.LGA_NAME21",
            "type": "nominal",
            "title": "Local Government Area"
          },
          {
            "field": "Residential Capacity (MW)",
            "type": "quantitative"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tihuang72/FIT3179/refs/heads/main/Visualisation%202/data/solar.csv"
      },
      "mark": "circle",
      "transform": [
        {
          "filter": {
            "field": "Lat",
            "valid": true
          }
        }
      ],
      "encoding": {
        "latitude": {
          "field": "Lat",
          "type": "quantitative"
        },
        "longitude": {
          "field": "Lon",
          "type": "quantitative"
        },
        "color": {
          "field": "",
          "type": "nominal",
          "value": "#000000"
        },
        "tooltip": [
          {
            "field": "Station Name",
            "type": "nominal",
            "title": "Station Name"
          },
          {
            "field": "Max Cap (MW)",
            "type": "quantitative",
            "title": "Max Cap (MW)"
          }
        ]
      }
    }
  ]
}