{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Energy Consumption per Capita",
    "width": 900,
    "height": 400,
    "projection": {"type": "equirectangular"},
    "data": {
      "url": "https://raw.githubusercontent.com/tihuang72/FIT3179/refs/heads/main/Visualisation%202/js/ne_110m.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
      {
        "lookup": "properties.ISO_A2",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/tihuang72/FIT3179/refs/heads/main/Visualisation%202/data/EnergyConsumption.csv"
          },
          "key": "country",
          "fields": ["Energy"]
        }
      }
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "Energy",
        "type": "quantitative"
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "Energy", "type": "quantitative"}
      ]
    }
  }