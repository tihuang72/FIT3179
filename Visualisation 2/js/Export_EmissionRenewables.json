{
    "background": "white",
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "params": [
        {
            "name": "yearRange",
            "value": [
                1990
            ],
            "bind": {
                "input": "range",
                "min": 1990,
                "max": 2022,
                "step": 1,
                "name": "Select Year Range: "
            }
        }
    ],
    "vconcat": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/tihuang72/FIT3179/refs/heads/main/Visualisation%202/data/perCapitaEmissionGeneration.csv"
            },
            "title": {
                "text": "Effect of Renewables on CO2 Emissions",
                "fontSize": 22,
                "font": "Roboto"
            },
            "width": 380,
            "height": 200,
            "transform": [
                {
                    "filter": "datum.CO2 < 100"
                },
                {
                    "filter": "year(datum.Year) == yearRange"
                }
            ],
            "layer": [
                {
                    "params": [
                        {
                            "name": "Fuel",
                            "select": {
                                "type": "point",
                                "fields": [
                                    "Continent"
                                ]
                            },
                            "bind": "legend"
                        }
                    ],
                    "mark": {
                        "type": "point",
                        "filled": true,
                        "size": 100
                    },
                    "encoding": {
                        "x": {
                            "field": "Renewables",
                            "type": "quantitative",
                            "axis": {
                                "labelFont": "Roboto",
                                "labelFontSize": 12,
                                "titleFont": "Roboto",
                                "titleFontSize": 12,
                                "title": "% Energy generation as renewables"
                            },
                            "scale": {
                                "type": "linear"
                            }
                        },
                        "y": {
                            "field": "CO2",
                            "type": "quantitative",
                            "axis": {
                                "labelFont": "Roboto",
                                "labelFontSize": 12,
                                "titleFont": "Roboto",
                                "titleFontSize": 12,
                                "title": "CO2 Emissions (tonnes)"
                            },
                            "scale": {
                                "type": "linear"
                            }
                        },
                        "color": {
                            "field": "Continent",
                            "legend": {
                                "labelFont": "Roboto",
                                "labelFontSize": 14,
                                "titleFont": "Roboto",
                                "titleFontSize": 16
                            },
                            "scale":{
                                "scheme": "dark2"
                            }
                        },
                        "opacity": {
                            "condition": {
                                "param": "Fuel",
                                "value": 1
                            },
                            "value": 0.05
                        },
                        "tooltip": [
                            {"field": "Entity", "title": "Country"},
                            {"field": "Renewables", "format": ",.2f"},
                            {"field": "CO2","format": ",.2f","title": "CO2(tonnes)"}
                        ]
                    }
                },
                {
                    "mark": {
                        "type": "line",
                        "strokeWidth" : 3,
                        "color": "black"
                    },
                    "transform": [
                        {
                            "regression": "CO2",
                            "on": "Renewables"
                        }
                    ],
                    "encoding": {
                        "x": {
                            "field": "Renewables",
                            "type": "quantitative"
                        },
                        "y": {
                            "field": "CO2",
                            "type": "quantitative"
                        }
                    }
                }
            ]
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/tihuang72/FIT3179/refs/heads/main/Visualisation%202/data/EnergyExport.csv"
            },
            "title": {
                "text": "Australia's Energy Export by Fuel Type",
                "fontSize": 22,
                "font": "Roboto"
            },
            "width": 380,
            "height": 200,
            "transform": [
                {
                    "filter": {
                        "not": {
                            "field": "Fuel",
                            "equal": "Total"
                        }
                    }
                },
                {
                    "filter": {
                        "field": "datum.Quantity",
                        "lt": 5000
                    }
                },
                {
                    "filter": "year(datum.Year) <= yearRange"
                }
            ],
            "encoding": {
                "x": {
                    "axis": {
                        "labelFont": "Roboto",
                        "labelFontSize": 12,
                        "titleFont": "Roboto",
                        "titleFontSize": 12
                    },
                    "field": "Year",
                    "type": "temporal"
                }
            },
            "layer": [
                {
                    "encoding": {
                        "color": {
                            "field": "Fuel",
                            "type": "nominal",
                            "legend": {
                                "labelFont": "Roboto",
                                "labelFontSize": 14,
                                "titleFont": "Roboto",
                                "titleFontSize": 16
                            },
                            "scale": {
                                "domain": [
                                    "Black coal",
                                    "Natural gas",
                                    "Crude oil and ORF",
                                    "LPG"
                                ],
                                "range": [
                                    "#4A4947",
                                    "#D8D2C2",
                                    "#705C53",
                                    "#B7B7B7"
                                ]
                            }
                        },
                        "y": {
                            "field": "Quantity",
                            "type": "quantitative",
                            "axis": {
                                "labelFont": "Roboto",
                                "labelFontSize": 12,
                                "titleFont": "Roboto",
                                "titleFontSize": 12,
                                "title": "Export Quantity (PJ)"
                            }
                        }
                    },
                    "layer": [
                        {
                            "mark": "area"
                        },
                        {
                            "transform": [
                                {
                                    "filter": {
                                        "param": "hover",
                                        "empty": false
                                    }
                                }
                            ],
                            "mark": "point"
                        }
                    ]
                },
                {
                    "transform": [
                        {
                            "pivot": "Fuel",
                            "value": "Quantity",
                            "groupby": [
                                "Year"
                            ]
                        }
                    ],
                    "mark": "rule",
                    "encoding": {
                        "opacity": {
                            "condition": {
                                "value": 0.3,
                                "param": "hover",
                                "empty": false
                            },
                            "value": 0
                        },
                        "tooltip": [
                            {
                                "timeUnit": "year",
                                "field": "Year",
                                "title": "Year"
                            },
                            {
                                "field": "Black coal",
                                "type": "quantitative",
                                "title": "Black Coal (PJ)",
                                "format": ",.0f"
                            },
                            {
                                "field": "Natural gas",
                                "type": "quantitative",
                                "title": "Natural Gas (PJ)",
                                "format": ",.0f"
                            },
                            {
                                "field": "Crude oil and ORF",
                                "type": "quantitative",
                                "title": "Crude Oil and ORF (PJ)",
                                "format": ",.0f"
                            },
                            {
                                "field": "LPG",
                                "type": "quantitative",
                                "title": "LPG (PJ)",
                                "format": ",.0f"
                            }
                        ]
                    },
                    "params": [
                        {
                            "name": "hover",
                            "select": {
                                "type": "point",
                                "fields": [
                                    "Year"
                                ],
                                "nearest": true,
                                "on": "pointerover",
                                "clear": "pointerout"
                            }
                        }
                    ]
                }
            ]
        }
    ],
    "resolve": {
        "scale": {
            "color": "independent"
        }
    }
}