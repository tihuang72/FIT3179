{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 380,
    "height": 200,
    "title": {
        "text": "Australia's Net GHG Emissions",
        "fontSize": 20,
        "font": "Roboto"
    },
    "params": [
        {
            "name": "Greenhouse",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "CO2",
                    "CH4",
                    "N2O",
                    "Other"
                ],
                "labels": [
                    "Show All",
                    "Carbon Dioxide",
                    "Methane",
                    "Nitrous Oxide",
                    "Other"
                ],
                "name": "Emission Type: "
            }
        }
    ],
    "layer": [
        {
            "data": {
                "values": [
                    {
                        "year": "2007-12-1"
                    }
                ]
            },
            "encoding": {
                "x": {
                    "field": "year",
                    "type": "temporal",
                    "title": "Year"
                }
            },
            "layer": [
                {
                    "mark": "rule"
                },
                {
                    "mark": {
                        "type": "text",
                        "align": "left",
                        "baseline": "bottom",
                        "dx": 2,
                        "dy": -40,
                        "x": "width",
                        "text": "Kyoto Protocol",
                        "fontSize": 12
                    }
                }
            ]
        },
        {
            "data": {
                "values": [
                    {
                        "year": "2016-01-01"
                    }
                ]
            },
            "encoding": {
                "x": {
                    "field": "year",
                    "type": "temporal",
                    "title": "Year"
                }
            },
            "layer": [
                {
                    "mark": "rule"
                },
                {
                    "mark": {
                        "type": "text",
                        "align": "left",
                        "dx": 2,
                        "dy": -2,
                        "text": "Paris Agreement",
                        "fontSize": 12
                    }
                }
            ]
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/tihuang72/FIT3179/refs/heads/main/Visualisation%202/data/Emissions2.csv"
            },
            "transform": [
                {
                    "filter": "Greenhouse == null || datum.GHG == Greenhouse"
                }
            ],
            "mark": {
                "type": "line",
                "strokeWidth": 4
            },
            "encoding": {
                "x": {
                    "field": "Quarter",
                    "type": "temporal",
                    "axis": {
                        "labelFont": "Roboto",
                        "labelFontSize": 12,
                        "titleFont": "Roboto",
                        "titleFontSize": 12,
                        "title": "Year"
                    }
                },
                "y": {
                    "field": "Value",
                    "type": "quantitative",
                    "title": "Net GHG emissions (Million tonne)",
                    "axis": {
                        "labelFont": "Roboto",
                        "labelFontSize": 12,
                        "titleFont": "Roboto",
                        "titleFontSize": 12
                    }
                },
                "tooltip": [
                    {
                        "field": "Value",
                        "title": "Emissions(Million tonne)"
                    }
                ],
                "color": {
                    "field": "GHG",
                    "scale": {
                        "domain": [
                            "CO2",
                            "CH4",
                            "N2O",
                            "Other"
                        ],
                        "range": [
                            "black",
                            "#A9A9A9",
                            "#D95F02",
                            "#c30808"
                        ]
                            
                    },
                    "legend": {
                        "labelFont": "Roboto",
                        "labelFontSize": 14,
                        "titleFont": "Roboto",
                        "titleFontSize": 16
                    }
                }
            }
        }
    ]
}