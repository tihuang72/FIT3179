{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/tihuang72/FIT3179/refs/heads/main/Visualisation%202/data/perCapitaEmissionGeneration.csv"
    },
    "title": {
        "text": "Relationship between emissions and renewables",
        "fontSize": 20,
        "font": "Roboto"
    },
    "width": 400,
    "height": 300,
    "params": [
        {
            "name": "year",
            "value": [
                1990
            ],
            "bind": {
                "name": "Year",
                "input": "range",
                "min": 1990,
                "max": 2022,
                "step": 1
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.CO2 < 100"
        },
        {
            "filter": "year(datum.Year) == year"
        }
    ],
    "layer": [
        {
            "params": [
                {
                    "name": "Fuel",
                    "select": {
                        "type": "point",
                        "fields": [
                            "Continent"
                        ]
                    },
                    "bind": "legend"
                }
            ],
            "mark": {
                "type": "point",
                "filled": true
            },
            "encoding": {
                "x": {
                    "field": "Renewables",
                    "type": "quantitative",
                    "axis":{
                        "labelFont": "Roboto",
                "labelFontSize": 12,
                "titleFont": "Roboto",
                "titleFontSize": 12
                    }
                },
                "y": {
                    "field": "CO2",
                    "type": "quantitative",
                    "axis":{
                        "labelFont": "Roboto",
                "labelFontSize": 12,
                "titleFont": "Roboto",
                "titleFontSize": 12,
                "title": "CO2 Emissions"
                    }
                    
                },
                "color": {
                    "field": "Continent",
                    "legend":{
                        "labelFont": "Roboto",
                "labelFontSize": 14,
                "titleFont": "Roboto",
                "titleFontSize": 16
                    }
                },
                "opacity": {
                    "condition": {
                        "param": "Fuel",
                        "value": 1
                    },
                    "value": 0.05
                },
                "tooltip": {
                    "field": "Entity"
                }
            }
        },
        {
            "mark": {
                "type": "line",
                "color": "firebrick"
            },
            "transform": [
                {
                    "regression": "CO2",
                    "on": "Renewables"
                }
            ],
            "encoding": {
                "x": {
                    "field": "Renewables",
                    "type": "quantitative"
                },
                "y": {
                    "field": "CO2",
                    "type": "quantitative"
                }
            }
        }
    ]
}